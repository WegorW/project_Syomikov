def find_closest_sum_pair(N_list):
    A = [random.randint(-50, 50) for _ in range(N_list)]
    R = random.randint(-100, 100)

    min_diff = float('inf')
    best_pair = None

    i = 0
    while i < N_list:
        j = i + 1
        while j < N_list:
            sum_val = A[i] + A[j]
            diff = abs(sum_val - R)

            if diff < min_diff:
                min_diff = diff
                best_pair = tuple(sorted((A[i], A[j])))

            j += 1
        i += 1

    return A, R, best_pair


